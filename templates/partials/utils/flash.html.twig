{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert" style="width: 80%;position: absolute;left: 50%;top: 0;transform: translate(-50%, 10px);">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="fermer"></button>
        </div>
    {% endfor %}
{% endfor %}